@model _24dh111520_LTW.Models.Product
@{
    ViewBag.Title = "Chỉnh sửa sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Chỉnh sửa sản phẩm</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ProductId" />

    <div class="form-group">
        <label>Tên sản phẩm</label>
        <input asp-for="ProductName" class="form-control" />
    </div>

    <div class="form-group">
        <label>Mô tả</label>
        <textarea asp-for="ProductDescription" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label>Giá</label>
        <input asp-for="ProductPrice" type="number" step="0.01" class="form-control" />
    </div>

    <div class="form-group">
        <label>Danh mục</label>
        @Html.DropDownListFor(model => model.CategoryId,
            new SelectList(ViewBag.Categories, "CategoryId", "CategoryName", Model.CategoryId),
            "-- Chọn danh mục --",
            new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Hình ảnh (URL)</label>
        <input asp-for="ProductImage" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary mt-2">Cập nhật</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">Quay lại</a>
</form>
