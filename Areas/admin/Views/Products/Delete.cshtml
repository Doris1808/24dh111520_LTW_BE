@model _24dh111520_LTW.Models.Product
@{
    ViewBag.Title = "Xóa sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Bạn có chắc muốn xóa sản phẩm này?</h2>

<div class="border p-3">
    <h4>@Model.ProductName</h4>
    <p><b>Mô tả:</b> @Model.ProductDescription</p>
    <p><b>Giá:</b> @Model.ProductPrice.ToString("N0") ₫</p>
    <p><b>Danh mục:</b> @Model.Category?.CategoryName</p>
    <img src="@Model.ProductImage" width="120" />
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="ProductId" />
    <button type="submit" class="btn btn-danger mt-2">Xóa</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">Hủy</a>
</form>
