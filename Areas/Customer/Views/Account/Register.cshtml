@model _24dh111520_LTW.Models.User

@{
    ViewBag.Title = "Đăng ký tài khoản";
    Layout = "~/Areas/Customer/Views/Shared/_CustomerLayout.cshtml";
}

<div class="container mt-5" style="max-width:600px;">
    <h3 class="text-center mb-4">Đăng ký tài khoản</h3>

    <form asp-action="Register" method="post">
        <div class="mb-3">
            <label class="form-label">Tên đăng nhập</label>
            <input asp-for="Username" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Mật khẩu</label>
            <input asp-for="Password" class="form-control" type="password" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Họ tên</label>
            <input asp-for="CustomerName" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Email</label>
            <input asp-for="CustomerEmail" class="form-control" type="email" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Số điện thoại</label>
            <input asp-for="CustomerPhone" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Địa chỉ</label>
            <input asp-for="CustomerAddress" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary w-100">Đăng ký</button>
    </form>
</div>
