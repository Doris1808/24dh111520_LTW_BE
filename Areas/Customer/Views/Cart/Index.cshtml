@model List<_24dh111520_LTW.Models.CartItem>
@{
    ViewBag.Title = "Giỏ hàng";
    Layout = "~/Areas/Customer/Views/Shared/_CustomerLayout.cshtml";
}

<h2 class="mb-4">🛒 Giỏ hàng của bạn</h2>

@if (!Model.Any())
{
    <p>Giỏ hàng đang trống 😢</p>
}
else
{
    <table class="table table-bordered">
        <thead class="table-light">
            <tr>
                <th>Hình</th>
                <th>Tên sản phẩm</th>
                <th>Giá</th>
                <th>Số lượng</th>
                <th>Tổng</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><img src="@item.ProductImage" width="70" /></td>
                    <td>@item.ProductName</td>
                    <td>@item.ProductPrice.ToString("C0")</td>
                    <td>@item.Quantity</td>
                    <td>@item.Total.ToString("C0")</td>
                    <td>
                        <a asp-area="Customer" asp-controller="Cart" asp-action="Remove" asp-route-id="@item.ProductId" class="btn btn-danger btn-sm">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-end">
        <h4>Tổng tiền: @Model.Sum(i => i.Total).ToString("C0")</h4>
        <a asp-area="Customer" asp-controller="Cart" asp-action="Clear" class="btn btn-outline-danger">🗑 Xóa toàn bộ</a>
        <a asp-area="Customer" asp-controller="Order" asp-action="Checkout" class="btn btn-success">✅ Thanh toán</a>
    </div>
}
